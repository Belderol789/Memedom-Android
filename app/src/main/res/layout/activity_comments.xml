<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBGColor"
    tools:context=".CommentsActivity">

    <ImageButton
        android:id="@+id/commentBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:tint="@color/whiteColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_back" />

    <ScrollView
        android:id="@+id/scrollViewComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentBackButton">

        <LinearLayout
            android:id="@+id/commentsLayoutScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/commentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appBGColorLight"
                android:elevation="20dp"
                app:cardCornerRadius="8dp"
                tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:cardBackgroundColor="@color/appBGColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/commentsImage"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/appBGColor"
                        android:contentDescription="Feed ImageView"
                        android:src="@drawable/ic_action_home"
                        app:layout_constraintBottom_toTopOf="@+id/commentActionLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userInfoLinear" />

                    <LinearLayout
                        android:id="@+id/userInfoLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:divider="@drawable/divider_vertical"
                        android:orientation="vertical"
                        android:showDividers="middle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_horizontal"
                            android:orientation="horizontal"
                            android:showDividers="middle">

                            <TextView
                                android:id="@+id/commentsTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Post Title Post Title Post Title Post Title Post Title Post Title Post Title Post Title"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/commentsUserInfo"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:divider="@drawable/divider_horizontal"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:visibility="visible">

                            <ImageButton
                                android:id="@+id/commentsProfilePic"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:background="@drawable/round_imageview"
                                android:src="@drawable/ic_action_name"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/commentsUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="Anonymous"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/commentsDate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:gravity="fill_vertical"
                                android:text="Just now"
                                android:textColor="@color/appSecondaryColor"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/commentActionLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:divider="@drawable/divider_horizontal"
                        android:gravity="center|fill_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@+id/commentAdView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/commentsImage">

                        <Button
                            android:id="@+id/commentLikeBtn"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/transparent"
                            android:drawableStart="@drawable/ic_action_like"
                            android:drawableTint="@color/whiteColor"
                            android:text="0"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteColor"
                            android:textSize="14dip"
                            tools:targetApi="m" />

                        <Button
                            android:id="@+id/commentCommentsBtn"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_action_chat"
                            android:drawableTint="@color/whiteColor"
                            android:text="10"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteColor"
                            android:textSize="14dip"
                            tools:targetApi="m" />

                        <Button
                            android:id="@+id/commentShareBtn"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/transparent"
                            android:drawableStart="@drawable/ic_action_share"
                            android:drawableTint="@color/whiteColor"
                            android:text="10"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteColor"
                            android:textSize="14dip"
                            tools:targetApi="m" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearReport"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:divider="@drawable/divider_horizontal"
                        android:orientation="horizontal"
                        android:showDividers="middle"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/reportBtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/soft_button"
                            android:text="Report"
                            android:textColor="@color/whiteColor" />

                        <Button
                            android:id="@+id/cancelBtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/soft_button_disabled"
                            android:text="Cancel"
                            android:textColor="@color/whiteColor" />

                    </LinearLayout>

                    <com.google.android.gms.ads.AdView
                        android:id="@+id/commentAdView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        app:adSize="BANNER"
                        app:adUnitId="ca-app-pub-8278458623868241/9189981779"
                        app:layout_constraintBottom_toTopOf="@+id/cardView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/commentActionLayout"
                        tools:visibility="gone">
                    </com.google.android.gms.ads.AdView>

                    <ImageView
                        android:id="@+id/commentLikeImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:alpha="0"
                        app:layout_constraintBottom_toBottomOf="@+id/commentsImage"
                        app:layout_constraintEnd_toEndOf="@+id/commentsImage"
                        app:layout_constraintStart_toStartOf="@id/commentsImage"
                        app:layout_constraintTop_toTopOf="@+id/commentsImage"
                        app:srcCompat="@drawable/ic_action_like"
                        app:tint="@color/appFGColor" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentCardView"
                tools:listitem="@layout/comments_item" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/appBGColorLight"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/appSecondaryColor"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/postComment"
            android:inputType="textMultiLine"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/appSecondaryColor" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:tint="@color/whiteColor"
            app:srcCompat="@drawable/ic_action_send" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>