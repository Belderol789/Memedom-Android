<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBGColor"
    tools:context=".CommentsActivity">

    <ImageButton
        android:id="@+id/commentBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:tint="@color/whiteColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_back" />

    <ScrollView
        android:id="@+id/scrollViewComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentBackButton">

        <LinearLayout
            android:id="@+id/commentsLayoutScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/commentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appBGColorLight"
                android:elevation="20dp"
                app:cardCornerRadius="8dp"
                tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/userInfoLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:divider="@drawable/divider_vertical"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/commentsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="Post Title"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/commentsUserInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_horizontal"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/commentsProfilePic"
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:background="@drawable/round_imageview"
                                android:src="@drawable/ic_action_name"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/commentsUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Anonymous"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/commentsDate"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:gravity="fill_vertical"
                                android:text="Just now"
                                android:textColor="@color/appSecondaryColor"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/commentsImage"
                        android:layout_width="0dp"
                        android:layout_height="320dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userInfoLinear"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <LinearLayout
                        android:id="@+id/commentsPointsLayout"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/cornered_layer"
                        android:divider="@drawable/divider_horizontal"
                        android:orientation="horizontal"
                        android:showDividers="middle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userInfoLinear">

                        <ImageView
                            android:id="@+id/commentsPointsIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            app:srcCompat="@drawable/ic_action_like"
                            app:tint="@color/appFGColor" />

                        <TextView
                            android:id="@+id/commentsPointsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="2.4k"
                            android:textAlignment="textStart"
                            android:textColor="@color/appFGColor"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentCardView"
                tools:listitem="@layout/comments_item" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cornered_card"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/appSecondaryColor"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/postComment"
            android:inputType="textMultiLine"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/appSecondaryColor" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:tint="@color/whiteColor"
            app:srcCompat="@drawable/ic_action_send" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>