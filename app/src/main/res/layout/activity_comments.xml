<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBGColor"
    tools:context=".CommentsActivity">

    <ImageButton
        android:id="@+id/commentBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:tint="@color/whiteColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_back" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentBackButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/commentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/appBGColorLight"
                android:elevation="20dp"
                app:cardCornerRadius="8dp"
                tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/commentsImage"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:contentDescription="Feed ImageView"
                        android:src="@drawable/ic_action_home"
                        app:layout_constraintBottom_toTopOf="@+id/commentsActionLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userInfoLinear" />

                    <LinearLayout
                        android:id="@+id/userInfoLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:divider="@drawable/divider_vertical"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/commentsReportButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/commentsUserInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_horizontal"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/commentsProfilePic"
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:background="@drawable/round_imageview"
                                android:src="@drawable/ic_action_name"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/commentsUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Anonymous"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/commentsDate"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:gravity="fill_vertical"
                                android:text="Just now"
                                android:textColor="@color/appSecondaryColor"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/commentsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="Post Title"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/commentsActionLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:divider="@drawable/divider_horizontal"
                        android:gravity="center|fill_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/commentsImage">

                        <Button
                            android:id="@+id/commentsShareBtn"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_action_share"
                            android:drawableTint="@color/whiteColor"
                            android:text="0"
                            android:textColor="@color/whiteColor"
                            tools:targetApi="m" />

                        <Button
                            android:id="@+id/commentsCommentsBtn"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_action_chat"
                            android:drawableTint="@color/whiteColor"
                            android:enabled="false"
                            android:text="0"
                            android:textColor="@color/whiteColor"
                            tools:targetApi="m" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/commentsReportButton"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/transparent"
                        android:contentDescription="@string/reporting_resource"
                        android:src="@drawable/ic_action_report"
                        android:tint="@color/whiteColor"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@+id/commentsImage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/commentsPointsLayout"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/cornered_layer"
                        android:divider="@drawable/divider_horizontal"
                        android:orientation="horizontal"
                        android:showDividers="middle"
                        app:layout_constraintStart_toStartOf="@+id/commentsImage"
                        app:layout_constraintTop_toBottomOf="@+id/userInfoLinear">

                        <ImageView
                            android:id="@+id/commentsPointsIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            app:srcCompat="@drawable/ic_action_like"
                            app:tint="@color/appFGColor" />

                        <TextView
                            android:id="@+id/commentsPointsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="2.4k"
                            android:textAlignment="textStart"
                            android:textColor="@color/appFGColor"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>