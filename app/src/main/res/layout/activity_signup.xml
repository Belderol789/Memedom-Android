<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBGColor"
    tools:context=".SignupActivity">

    <LinearLayout
        android:id="@+id/layoutSignupAuth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:divider="@drawable/divider_vertical_long"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:showDividers="middle"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneu_bold"
            android:text="Join the Memedom"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/whiteColor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fbSignupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/facebookSignupBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Signup with Facebook"
            android:textColor="@color/whiteColor"
            app:layout_constraintTop_toTopOf="@+id/authentication_view"
            tools:layout_editor_absoluteX="307dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneu_bold"
            android:text="OR SIGN UP WITH EMAIL"
            android:textAlignment="center"
            android:textColor="@color/appSecondaryColor"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:divider="@drawable/divider_vertical_long"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputSignupEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/soft_button"
                android:backgroundTint="@color/whiteColor"
                android:theme="@style/defaultTextEdit"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSignupEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:hint="Email Address"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/appBGColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputSignupPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/soft_button"
                android:backgroundTint="@color/whiteColor"
                android:theme="@style/defaultTextEdit"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSignupnPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:hint="@string/hint_password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/appBGColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputSignupUsername"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/soft_button"
                android:backgroundTint="@color/whiteColor"
                android:theme="@style/defaultTextEdit"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSignupUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:hint="@string/hint_username"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/appBGColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputSignupBirthday"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/soft_button"
                android:backgroundTint="@color/whiteColor"
                android:theme="@style/defaultTextEdit"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSignupBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:hint="@string/hint_birthday"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/appBGColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/privacyCheckBox"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="I HAVE READ THE PRIVACY POLICY"
                android:buttonTint="@color/whiteColor"
                android:textColor="@color/whiteColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonNextSignupAuth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/whiteColor"
                app:layout_constraintTop_toTopOf="@+id/authentication_view"
                tools:layout_editor_absoluteX="307dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/signupBackBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/whiteColor"
        android:tint="@color/appFGColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signupLoadingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/clearBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <ImageView
                android:id="@+id/loadingImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>