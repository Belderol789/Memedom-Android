<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/appSecondaryColor</item>
        <item name="colorControlNormal">@color/appBGColor</item>
        <item name="colorControlActivated">@color/appFGColor</item>
        <item name="colorControlHighlight">@color/whiteColor</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF69B4</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#C0C0C0</item>
    </style>

</resources>